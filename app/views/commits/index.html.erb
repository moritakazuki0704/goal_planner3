<div class="left-page">
  <!--文言を入れる-->
</div>
<div class="right-page">
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-activity-tab" data-toggle="tab" href="#nav-activity" role="tab" aria-controls="nav-activity" aria-selected="true">進行中の目標</a>
      <a class="nav-item nav-link" id="nav-finish-tab" data-toggle="tab" href="#nav-finish" role="tab" aria-controls="nav-finish" aria-selected="false">達成した目標</a>
      <a class="nav-item nav-link" id="nav-pending-tab" data-toggle="tab" href="#nav-pending" role="tab" aria-controls="nav-pending" aria-selected="false">保留した目標</a>
      <a class="nav-item nav-link" id="nav-commit-tab" data-toggle="tab" href="#nav-commit" role="tab" aria-controls="nav-commit" aria-selected="false">新たに目標を定める</a>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-activity" role="tabpanel" aria-labelledby="nav-activity-tab">
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          <p>進行中の目標</p>
        </div>
        <!--position:stickyを使用して、スクロール機能をつける-->
        <% @commits.activity.each do |commit| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= link_to commit_path do %>
                <%= commit.commitment %>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-finish" role="tabpanel" aria-labelledby="nav-finish-tab">
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          <p>達成した目標</p>
        </div>
        <% @commits.finish.each do |commit| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= link_to commit_path do %>
                <%= commit.commitment %>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-pending" role="tabpanel" aria-labelledby="nav-pending-tab">
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          <p>保留した目標</p>
        </div>
        <% @commits.pending.each do |commit| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <%= link_to commit_path do %>
                <%= commit.commitment %>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-commit" role="tabpanel" aria-labelledby="nav-commit-tab">
      <!--文言を入れる-->
    </div>
  </div>
  <div>
    <%= link_to '新たに目標を定める',new_commit_path %>
  </div>
</div>