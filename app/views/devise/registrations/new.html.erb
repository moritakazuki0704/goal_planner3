<div class="container-fluid">
  <div class="book-cover row justify-content-center my-4">
    <div class="col-6 align-self-center my-5">
      <div class="smart-content text-center font-weight-bold">
        <h5>
          この本の名前と<br>
          本を開く合言葉と鍵を教えてください
        </h5>
      </div>
      <%= form_with model: @user,url: user_registration_path do |f| %>
        <div class="cross-frame text-center font-weight-bold">
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row">
            <div class="col px-5 mx-5">
              <div class="field form-group mt-3">
                <%= f.label :planner_name %>
                <%= f.text_field :planner_name, autofocus: true,class: "form-control" %>
              </div>
              <div class="field form-group">
                <%= f.label :secret_word %>
                <%= f.text_field :secret_word, autofocus: true,class: "form-control" %>
              </div>
              <div class="field form-group">
                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
              </div>
              <div class="field form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="actions d-flex justify-content-around p-3">
            <div>
              <%= f.submit "登録する",class: "btn btn-success" %>
            </div>
            <div>
              <%= link_to "前に戻る", root_path,class: "btn btn-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


